<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- EditText for entering student name -->
    <EditText
        android:id="@+id/studentNameEditText"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="16dp"
        android:hint="Enter student name" />

    <!-- Button to capture image -->
    <Button
        android:id="@+id/captureImageButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Capture Image"
        android:layout_marginBottom="16dp"
        android:background="@drawable/button_background"
        android:textColor="@android:color/white"
        android:textSize="18sp"/>

    <!-- Button to count marks -->
    <Button
        android:id="@+id/countMarksButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Count Marks"
        android:layout_marginBottom="16dp"
        android:background="@drawable/button_background"
        android:textColor="@android:color/white"
        android:textSize="18sp"/>


    <Button
        android:id="@+id/NewExamButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_background"
        android:text="Add new exam paper"
        android:textColor="@android:color/white"
        android:textSize="18sp" />


</LinearLayout>




