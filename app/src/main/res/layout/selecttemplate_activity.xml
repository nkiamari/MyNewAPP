<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Button to select templates from gallery -->
    <Button
        android:id="@+id/selectTemplatesButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Select Templates" />

    <!-- Button to capture an image -->
    <Button
        android:id="@+id/captureImageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Capture Image"
        android:layout_below="@id/selectTemplatesButton"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true" />

    <!-- Button to count marks -->
    <Button
        android:id="@+id/countMarksButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Count Marks"
        android:layout_below="@id/captureImageButton"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true" />

    <!-- ImageView to display the captured image -->

    <ImageView
        android:id="@+id/matchingImageView"
        android:layout_width="146dp"
        android:layout_height="178dp"
        android:layout_below="@id/countMarksButton"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="26dp"
        android:adjustViewBounds="true"
        android:contentDescription="Matching Image"
        android:scaleType="fitCenter"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/templatekeypointsImageView"
        android:layout_width="171dp"
        android:layout_height="178dp"
        android:layout_above="@id/selectTemplatesButton"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="-1dp"
        android:layout_marginBottom="102dp"
        android:adjustViewBounds="true"
        android:contentDescription="Template Keypoints Image"
        android:scaleType="fitCenter"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/capturedkeypointsImageView"
        android:layout_width="164dp"
        android:layout_height="187dp"
        android:layout_below="@id/selectTemplatesButton"
        android:layout_marginTop="-327dp"
        android:adjustViewBounds="true"
        android:contentDescription="Captured Keypoints Image"
        android:scaleType="fitCenter"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/resultImageView"
        android:layout_width="155dp"
        android:layout_height="175dp"
        android:layout_below="@id/capturedkeypointsImageView"
        android:layout_alignParentStart="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="287dp"
        android:layout_marginEnd="39dp"
        android:layout_toStartOf="@+id/matchingImageView"
        android:adjustViewBounds="true"
        android:contentDescription="Result Image"
        android:scaleType="fitCenter"
        android:visibility="visible" />

</RelativeLayout>
