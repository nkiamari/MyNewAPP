<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Button to select templates from gallery -->
    <Button
        android:id="@+id/selectTemplatesButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Templates"
        android:layout_centerInParent="true" />

    <!-- Button to capture an image -->
    <Button
        android:id="@+id/captureImageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Capture Image"
        android:layout_below="@id/selectTemplatesButton"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true" />

    <!-- Button to count marks -->
    <Button
        android:id="@+id/countMarksButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Count Marks"
        android:layout_below="@id/captureImageButton"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true" />

    <!-- ImageView to display the captured image -->
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/countMarksButton"
        android:layout_marginTop="16dp"
        android:scaleType="fitCenter"
        android:visibility="gone" />

</RelativeLayout>
